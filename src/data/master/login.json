{
    "logo": {
        "path": "/",
        "src": "images/hth.jpg",
        "alt": "blue",
        "name": "HTH"
    },
    "pattern": {
        "src": "images/pattern.webp",
        "alt": "line-pattern"
    },
    "title": "Login to HTH",
    "input": [
        {
            "name": "email",
            "icon": "email",
            "type": "email",
            "placeholder": "Enter your email",
            "fieldSize": "w-100 h-sm"
        },
        {
            "name": "password",
            "icon": "lock",
            "type": "password",
            "placeholder": "Enter your password",
            "fieldSize": "w-100 h-sm",
            "passwordVisible": true
        }
    ],
    "button": {
        "type": "submit",
        "text": "Log in",
        "fieldSize": "h-sm"
    },
    "forgot": {
        "path": "/forgot-password",
        "text": "forgot password?"
    },
    "navigate": {
        "title": "Don't have an account?",
        "path": "/register",
        "text": "register"
    }
}